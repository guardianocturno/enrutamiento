sudo apt-get update; sudo apt-get upgrade -y

mkdir /home/usuario/scritps

touch enruta.sh
echo "	#!/bin/bash" >> /home/usuario/scritps/enruta.sh
echo "	echo “1” > /proc/sys/net/ipv4/ip_forward " >> /home/usuario/scritps/enruta.sh
echo "	iptables -t nat -A POSTROUTING -s 193.168.4.0/24 -o ens18 -j MASQUERADE " >> /home/usuario/scritps/enruta.sh
echo "	iptables -A FORWARD -j ACCEPT " >> /home/usuario/scritps/enruta.sh

bash enruta.sh
